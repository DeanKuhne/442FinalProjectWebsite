@page
@model Team450Project.Pages.Scores.IndexModel

@{
    ViewData["Title"] = "Index";
}


<style>


    .btn-group a {
        display: inline-block;
        background-color: #4CAF50;  
        color: white;  
        padding: 12px 36px; 
        cursor: pointer; 
        float: left;  
        /*width: 50%;*/
        text-decoration: none;
        box-shadow: 0 9px #999;
        font-weight: bold;
        border-radius: 12px;
        border: none;
        font-size: 20px;
  
       
    }


    .btn-group:after {
        content: "";
        clear: both;
        display: table;
    }

    a:hover {
        background-color: #3e8e41
    }

    a:active {
        background-color: #3e8e41;
        box-shadow: 0 5px #666;
        transform: translateY(4px);
    }

   
   
</style>

<br />
<div class="btn-group">
    <a asp-page="States">US_States</a>

    <a asp-page="Capitals">US_Capitals</a>

    <a asp-page="US_Locate">US_State_Locate</a>

</div>
<br />
<br />

<table class="table" style="width:100%" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScoreBoard[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoreBoard[0].Score)
            </th>
            <th>
